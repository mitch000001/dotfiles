[help]
	autocorrect = 10

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[diff "ruby"]
	funcname = "^ *\\(\\(def\\) .*\\)"

[diff "image"]
	textconv = identify

[difftool "vimdiff"]
	cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
	path =

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[merge]
	summary = true
	tool = vimdiff

[mergetool "vimdiff"]
	cmd = vimdiff \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
	trustExitCode = true

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true

[credential]
	helper = osxkeychain

[push]
	default = upstream

[help]
	autocorrect = 1

[commit]
	template = ~/.git_template/gitcommit.template

[branch]
	autosetuprebase = always

[diff]
	tool = vimdiff
